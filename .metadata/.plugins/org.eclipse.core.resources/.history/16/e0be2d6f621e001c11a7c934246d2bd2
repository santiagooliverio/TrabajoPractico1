int suma(int a, int b)
{
    return a + b;
}

int resta(int a, int b)
{
    return a - b;
}

int multiplicacion(int a, int b)
{
    return a * b;
}

float division(int a, int b)
{
    return (float)a / b;
}

int factorial(int a)
{
    int acumuladorResultado = 1;
    for(int i = a; i >= 1; i--)
    {
        acumuladorResultado *= i;
    }

    return acumuladorResultado;
}

